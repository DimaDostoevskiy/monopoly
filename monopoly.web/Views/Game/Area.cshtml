@using monopoly.web.ViewModels;
@model IEnumerable<BaseModel>
@{
	ViewData["Title"] = "Area";
}

<div class="area" onclick="ClickOnArea(event)"></div>

@if (Model == null)
{
	<h1>No connect</h1>
}
else
{
	@foreach (var item in Model)
	{
		<img class="base-class @item.Class" onclick="ClickOnElement(event, @item.Name)" id="@item.Name" alt="planet1"
	src="@item.ImagePath" style="left: @(item.PositionX)px; top: @(item.PositionY)px;">
	}
	<div id="cardInfo" class="base-class cardInfo"></div>
}