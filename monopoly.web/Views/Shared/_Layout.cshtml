<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - monopoly.web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/monopoly.web.styles.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar box-shadow bg-dark fixed-top">
			<a asp-controller="Home" asp-action="Index" class="  p-3 text-decoration-none text-white">Home </a>
			<a asp-controller="Home" asp-action="Privacy" class="p-3 text-decoration-none text-white">Privacy</a>
			<a asp-controller="Game" asp-action="Area" class="p-3 text-decoration-none text-white">Area </a>
		</nav>
	</header>
	@RenderBody()
	<footer></footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/area.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
